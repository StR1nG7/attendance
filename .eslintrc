{
	"env": {
		"es6": true,
		"browser": true
	},
	"extends": [
		"airbnb"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"no-plusplus": "off",
		"eol-last": "off",
		"no-tabs": "off",
		"prefer-destructuring": "off",
		"linebreak-style": "off",
//		"indent": ["error", "tab"],
		"indent": "off",
		"no-unused-vars": "warn",
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	}
}
